    "version": "0.0.1",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "host_server": "localhost",
                "ssl_mode": "prefer",
                "db_server_port": "5432"
            },
            "cwd": "${workspaceFolder}/app",
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8000"
            ]
        }
    ]
}